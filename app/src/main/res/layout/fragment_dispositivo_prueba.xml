<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <!-- Background -->
    <include layout="@layout/double_background" />


    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBackDispositivos"
        android:layout_width="@dimen/ic_back_size"
        android:layout_height="@dimen/ic_back_size"
        android:layout_margin="@dimen/ic_back_margin"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/cd_back_icon" />


    <!-- Contenido de la vista -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Título sección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/cv_margin_access_point"
            android:layout_marginTop="@dimen/cv_margin_access_point_top"
            android:layout_marginEnd="@dimen/cv_margin_access_point"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >

            <!-- Ícono de la pantalla -->
            <ImageView
                android:layout_width="@dimen/ic_icon_dispositivo_width"
                android:layout_height="@dimen/ic_icon_dispositivo_height"
                android:layout_weight=".9"
                android:contentDescription="@string/cd_icon_dispositivos"
                android:paddingStart="@dimen/cv_access_margin_start"
                android:paddingEnd="@dimen/cv_access_margin_end"
                android:scaleType="centerInside"
                android:src="@drawable/ic_img_chip" />

            <!-- Textos titulares -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:orientation="vertical">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvTitle_dispositivos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_bold"
                    android:lineHeight="@dimen/tv_lineheight_30"
                    android:text="@string/tv_title_dispositivos"
                    android:textColor="@color/colortextwhite"
                    android:textSize="@dimen/tv_textsize_32" />


                <!-- Dispositivo conectado -->
                <TextView
                    android:id="@+id/tvMacSelectedDispositivos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/colortextwhite"
                    android:textSize="@dimen/tv_textsize_20"
                    tools:text="00:1B:C5:86:A6:1B"/>
            </LinearLayout>

        </LinearLayout>


        <!-- List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/cv_margin_access_point"
            android:layout_marginEnd="@dimen/cv_margin_access_point"
            android:layout_marginBottom="@dimen/cv_margin_access_point"
            android:layout_weight=".2"
            android:orientation="vertical" >


            <!-- CardView Probar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvDispositivos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/cardScanBackground"
                app:cardCornerRadius="@dimen/cv_corner_radius"
                app:cardElevation="@dimen/cv_elevation_access"
                app:cardUseCompatPadding="true" >


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cv_margin30"
                    android:layout_gravity="center_vertical" >

                    <!-- SSID  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding17"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/rubik_bold"
                            android:text="@string/tv_dispositivos_ssid"
                            android:textColor="@color/colorIconBlue"
                            android:textSize="@dimen/tv_textsize18"  />

                        <TextView
                            android:id="@+id/tvSsidDispositivos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".45"
                            tools:text="@string/tv_redes_access"
                            android:gravity="center"
                            android:textSize="@dimen/tv_textsize18"  />
                    </LinearLayout>

                    <!-- RSSI -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding17"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/rubik_bold"
                            android:text="@string/tv_sdi_access"
                            android:textColor="@color/colorIconBlue"
                            android:textSize="@dimen/tv_textsize18"  />

                        <TextView
                            android:id="@+id/tvRssiDispositivos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".45"
                            tools:text="@string/tv_ssdi_number_access"
                            android:gravity="center"
                            android:textSize="@dimen/tv_textsize18"  />
                    </LinearLayout>

                    <!-- Access Point -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding17"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/rubik_bold"
                            android:text="@string/tv_ap_access"
                            android:textColor="@color/colorIconBlue"
                            android:textSize="@dimen/tv_textsize18"  />

                        <ImageView
                            android:id="@+id/ivCheckAp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight=".45"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_ok"
                            android:contentDescription="@string/cd_test_icon" />

                    </LinearLayout>

                    <!-- IP -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding17"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/rubik_bold"
                            android:text="@string/tv_ip"
                            android:textColor="@color/colorIconBlue"
                            android:textSize="@dimen/tv_textsize18" />

                        <TextView
                            android:id="@+id/tvIpDispositivos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".45"
                            tools:text="@string/tv_dispositivos_ip"
                            android:gravity="center"
                            android:textSize="@dimen/tv_textsize18" />
                    </LinearLayout>

                    <!-- Internet -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding17"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/rubik_bold"
                            android:text="@string/tv_internet_access"
                            android:textColor="@color/colorIconBlue"
                            android:textSize="@dimen/tv_textsize18"  />

                        <ImageView
                            android:id="@+id/ivCheckInternet"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight=".45"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_nok"
                            android:contentDescription="@string/cd_test_icon"/>
                    </LinearLayout>

                    <!-- Conexión a servidor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding17"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/rubik_bold"
                            android:text="@string/tv_data_access"
                            android:textColor="@color/colorIconBlue"
                            android:textSize="@dimen/tv_textsize18"  />

                        <ImageView
                            android:id="@+id/ivCheckData"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight=".45"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_ok"
                            android:contentDescription="@string/cd_test_icon"/>
                    </LinearLayout>


                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </TableLayout>

</RelativeLayout>