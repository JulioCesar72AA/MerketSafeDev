<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/scan_content_margin"
    android:orientation="horizontal">
        
    <TextView
        android:id="@+id/tvScanMac"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:fontFamily="@font/rubik_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="11:22:33:44:55:66"/>

    <ImageView
        android:layout_width="@dimen/no_dimen"
        android:layout_height="@dimen/heigh_icon_ble_dimen"
        android:layout_weight="1"
        android:gravity="end"
        android:src="@drawable/ic_bluetooth_connected"
        android:contentDescription="@string/cd_bluetooth_icon"
        android:tint="@color/colorIconBlue"/>

</LinearLayout>