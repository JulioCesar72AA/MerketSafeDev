<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/_8dp"
    android:orientation="horizontal">
        
    <TextView
        android:id="@+id/tvScanMac"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11:22:33:44:55:66"/>

    <ImageView
        android:id="@+id/ivDeviceIcon"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="@dimen/heigh_icon_ble_dimen"
        android:src="@drawable/ic_bluetooth_connected"
        android:contentDescription="@string/cd_bluetooth_icon"
        android:tint="@color/colorIconBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvScanMac"
        app:layout_constraintBottom_toBottomOf="@id/tvScanMac" />

    <TextView
        android:id="@+id/tvDeviceModel"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvScanMac"
        app:layout_constraintStart_toStartOf="@id/tvScanMac"
        tools:text="CIR Wireless"/>

    <TextView
        android:id="@+id/tvDeviceSerial"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceModel"
        app:layout_constraintStart_toStartOf="@id/tvDeviceModel"
        tools:text="@string/serial_number_solkos"/>

    <TextView
        android:id="@+id/tvDeviceType"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceSerial"
        app:layout_constraintStart_toStartOf="@id/tvDeviceSerial"
        tools:text="@string/type_solkos"/>

    <TextView
        android:id="@+id/tvDeviceSolkosModel"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceType"
        app:layout_constraintStart_toStartOf="@id/tvDeviceType"
        tools:text="@string/model_solkos"/>

    <TextView
        android:id="@+id/tvDeviceTransmition"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceSolkosModel"
        app:layout_constraintStart_toStartOf="@id/tvDeviceSolkosModel"
        tools:text="@string/transmition_solkos"/>
</androidx.constraintlayout.widget.ConstraintLayout>