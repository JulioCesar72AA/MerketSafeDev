<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20dp"
    android:background="@color/gray70"
    tools:context=".fragments.WiFiPasscodeFragment">

    <ImageView
        android:id="@+id/ivWiFiPasscodeIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wifi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWiFiPasscodeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_textsize_20"
        android:textColor="@color/azul40"
        android:text="@string/tv_wifi_message"
        app:layout_constraintTop_toBottomOf="@+id/ivWiFiPasscodeIcon" />

    <LinearLayout
        android:id="@+id/llWiFiPasscode"
        android:layout_height="@dimen/_50dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:weightSum="1.1"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/azure70"
        android:layout_marginBottom="@dimen/_15dp"
        android:padding="@dimen/_5dp"
        app:layout_constraintBottom_toTopOf="@+id/etWiFiPasscodePasscode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/heigh_icon_ble_dimen"
            android:src="@drawable/wifi"
            android:layout_weight=".5"/>
        <TextView
            android:id="@+id/tvWiFiPasscodeWiFiName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heigh_icon_ble_dimen"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/azul40"
            android:gravity="center"
            android:textAlignment="textStart"
            android:layout_weight=".1"
            android:layout_marginHorizontal="@dimen/_5dp"
            tools:text="TP-LINK"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/heigh_icon_ble_dimen"
            android:src="@drawable/ic_lock"
            android:layout_weight=".5"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/azul40"
        android:layout_marginHorizontal="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@+id/llWiFiPasscode"
        app:layout_constraintStart_toStartOf="@+id/llWiFiPasscode"
        app:layout_constraintEnd_toEndOf="@+id/llWiFiPasscode"/>

    <EditText
        android:id="@+id/etWiFiPasscodePasscode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_15dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:lines="1"
        android:padding="@dimen/_5dp"
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnWiFiPasscodeNext"/>
    
    <Button
        android:id="@+id/btnWiFiPasscodeNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_corners_blue_40"
        android:text="@string/next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>