<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/_20dp"
    android:background="@color/azure70"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLockIcon"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="@dimen/heigh_icon_ble_dimen"
        android:src="@drawable/ic_lock"
        android:contentDescription="@string/cd_bluetooth_icon"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvWiFiName"
        app:layout_constraintBottom_toBottomOf="@id/tvWiFiName" />

    <ImageView
        android:id="@+id/ivWiFiIcon"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/heigh_icon_ble_dimen"
        android:layout_marginStart="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_wifi" />

    <TextView
        android:id="@+id/tvWiFiName"
        android:layout_width="@dimen/no_dimen"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:layout_marginTop="@dimen/_8dp"
        android:textSize="@dimen/_15dp"
        android:textColor="@color/azul40"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivWiFiIcon"
        tools:text="TP-Link"/>

    <TextView
        android:id="@+id/tvBottomStroke"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/azul40"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWiFiName"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>