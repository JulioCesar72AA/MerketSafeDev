<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account"
        android:textColor="@color/azul40"
        android:fontFamily="@font/rubik_bold"
        android:textSize="@dimen/_25dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llAccountUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/tvSettingsTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSettingsTitle">
        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/ic_user"/>
        <TextView
            android:id="@+id/tvAccountUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azul40"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginStart="@dimen/_10dp"
            android:textSize="@dimen/_20dp"
            tools:text="Natalia RodrÃ­guez" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAccountEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/llAccountUsername"
        app:layout_constraintTop_toBottomOf="@+id/llAccountUsername">
        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/ic_at"/>
        <TextView
            android:id="@+id/tvAccountEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azul40"
            android:fontFamily="@font/rubik_regular"
            android:textSize="@dimen/_15dp"
            tools:text="nat@email.com"
            android:layout_marginStart="@dimen/_10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAccountTradeMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/llAccountEmail"
        app:layout_constraintTop_toBottomOf="@+id/llAccountEmail">
        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/ic_trademark"/>
        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azul40"
            android:fontFamily="@font/rubik_regular"
            android:textSize="@dimen/_15dp"
            android:text="Imbera"
            android:layout_marginStart="@dimen/_10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>