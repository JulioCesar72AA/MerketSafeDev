<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="380dp"
    android:minWidth="300dp"
    android:minHeight="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:background="@drawable/gray_rounded_corners"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_popup_relative"
    android:paddingEnd="@dimen/padding_popup_relative"
    android:theme="@style/CustomDialog">

        <!-- Ícono de diálogo -->
        <ImageView
            android:layout_width="@dimen/tv_lock_icon"
            android:layout_height="@dimen/tv_lock_icon"
            android:layout_margin="@dimen/tv_textsize_20"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="@string/cd_password_icon"
            android:src="@drawable/ic_lock" />

        <!-- Nombre Access Point Seleccionado -->
        <TextView
            android:id="@+id/tvAccessPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_password_wifi"
            android:textAlignment="center"
            android:fontFamily="@font/rubik_regular"
            android:textSize="@dimen/tv_textsize18"
            android:layout_marginBottom="@dimen/padding17"/>

        <!-- Input de Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/colorIconBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/hint_password"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones Inferiores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <!-- Cancelar -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:layout_marginTop="10dp"
                android:text="@string/tv_cancelar"
                android:textColor="@color/azul40"
                android:padding="@dimen/tv_padding_25"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                style="@style/MyButton" />

            <!-- Aceptar -->
            <Button
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:layout_marginTop="10dp"
                android:text="@string/tv_aceptar"
                android:textColor="@color/azul40"
                android:padding="@dimen/tv_padding_25"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                style="@style/MyButton" />

        </LinearLayout>

</LinearLayout>